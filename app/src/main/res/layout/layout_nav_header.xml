<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_192_dp"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16_dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_navigation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4_dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/nav_language_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_16_sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_profile_image"
        android:layout_width="@dimen/dimen_90_dp"
        android:layout_height="@dimen/dimen_90_dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dimen_8_dp"
        android:src="@drawable/ic_camera"
        app:civ_border_color="@color/color_profile_image_border"
        app:civ_border_width="@dimen/dimen_2_dp" />

    <TextView
        android:id="@+id/nav_kid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_20_sp" />

</LinearLayout>
